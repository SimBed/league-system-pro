<%= form_with(model: league, class: 'admin_form pt-4 my-2') do |form| %>
  <% if league.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(league.errors.count, "error") %> prohibited this league from being saved:</h2>

      <ul>
        <% league.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :season, style: "display: block" %>
    <%= form.text_field :season %>
  </div>

  <div class="field">
    <%= form.label :participants_per_match, style: "display: block" %>
    <%= form.number_field :participants_per_match %>
  </div>

  <div class="field">
    <%= form.label :participant_type, style: "display: block" %>
    <%= form.text_field :participant_type %>
  </div>

  <div class="actions mt-3">
    <%= form.submit %>
  </div>

  <% if league.new_record? %>
    <div class='cancel' data-controller="form-cancel"><%= link_to 'X', '#', data: { action: 'form-cancel#cancel' } %> </div>  
  <% else %>
    <div class='cancel'><%= link_to 'X', leagues_path %> </div>  
  <% end %>    
<% end %>
