<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="field mb-2">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field mb-2">
    <%= f.label :password do %>
      Password
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-password" %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    <% end %>
  </div>  

  <% if false && devise_mapping.rememberable? %>
    <div class="field mb-2">
      <%= f.label :remember_me, class: "checkbox inline mb-2" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
    </div>  
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-black" %>
  </div>
<% end %>

