<div class="container">
  <div class="canvas gray100-canvas embossed width32 px-2"> 
    <h3 class='text-center'>Reset password</h3>
    <p>A reset password link will be sent to your registered email address.</p>
    <p>Please check your Spam folder and move the message to your Inbox if necessary.</p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-black" %>
      </div>
    <% end %>
  </div>
</div>